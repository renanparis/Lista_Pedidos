<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cardview_item_list"

    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Nome"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_list_order"
            android:layout_marginStart="8dp"
            android:padding="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_list_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Cidade"
            android:textSize="14sp"
            android:textColor="#08088A"
            app:layout_constraintStart_toStartOf="@id/item_list_name"
            app:layout_constraintTop_toBottomOf="@+id/item_list_name"
            app:layout_constraintBottom_toBottomOf="@+id/item_list_order"
            app:layout_constraintEnd_toStartOf="@id/item_list_order"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/item_list_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100"
            android:textSize="20sp"
            android:textColor="#8A0808"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/item_list_city"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>